<launch>
    <arg name="base"/>
    <arg name="stacks"/>
    <arg name="rplidar_sensor"/>
    
    <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find mapping_with_lidar)/robots/$(arg base)_$(arg stacks)_$(arg rplidar_sensor).urdf.xacro'" />
    
    <param name="robot_description" command="$(arg urdf_file)" />
</launch>
